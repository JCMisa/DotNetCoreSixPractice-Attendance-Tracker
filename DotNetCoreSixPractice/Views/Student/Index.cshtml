@model List<DotNetCoreSixPractice.Models.MainModel.Student>

<div class="container p-3 mt-25">
    <div class="row" pt-4>
        <div class="col-6">
            <h2 class="text-primary">Students List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Student @*&nbsp; is used to add space*@
            </a>
        </div>
    </div>

    <br />
    <br />

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Email</th>
                <th scope="col">Course</th>
                <th scope="col">IN</th>
                <th></th>
            </tr>
        </thead>
        <tbody>    
                @foreach(var student in Model)
                {
                    <tr class="table-primary">
                        <th scope="row">@student.Name</th>
                        <td>@student.Age</td>
                        <td>@student.Email</td>
                        <td>@student.CourseYearSec</td>
                        <td>@student.In</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> &nbsp Edit</a>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> &nbsp Delete</a>
                            </div>
                        </td>
                    </tr>
                }             
        </tbody>
    </table>
</div>