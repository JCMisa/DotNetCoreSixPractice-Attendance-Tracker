@model DotNetCoreSixPractice.Models.MainModel.Student

<form method="post" asp-action="Edit" class="mt-25">
    <fieldset>
        <legend class="center">Edit Student</legend>

        @*for name*@
        <div class="form-group">
            <label for="name" class="form-label mt-4">Full Name</label>
            <input asp-for="Name" type="text" class="form-control border-darkGray" id="name" placeholder="LastName, FirstName MiddleInitial">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        @*for age*@
        <div class="form-group">
            <label for="age" class="form-label mt-4">Age</label>
            <input asp-for="Age" type="number" class="form-control border-darkGray" id="age">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        @*for age*@
        <div class="form-group">
            <label for="email" class="form-label mt-4">Email address</label>
            <input asp-for="Email" type="email" class="form-control border-darkGray" id="email" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>       
        </div>

        @*for YearLevel*@
        <div class="form-group">
            <label for="year" class="form-label mt-4">Year Level</label>
            <input asp-for="CourseYearSec" type="text" class="form-control border-darkGray" id="year" placeholder="Course Year-Section Ex.BS INFO 1-B">
            <span asp-validation-for="CourseYearSec" class="text-danger"></span>
        </div>

        @*attendance in*@
        <div class="form-group mt-25">
            <label for="in" class="form-label">IN</label>
            <input asp-for="CourseYearSec" value="@DateTime.Now" type="text" class="form-control border-darkGray" id="in" readonly>
            <span asp-validation-for="In" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary mt-50"> <i class="bi bi-pencil-square"></i> &nbsp; Update</button>
        <a asp-asp-controller="Student" asp-action="Index" class="btn btn-close-white mt-50"> <i class="bi bi-backspace-fill"></i> &nbsp; Back to List</a>

    </fieldset>
</form>

